<manifest package="com.example.android.camera2video"
          xmlns:android="http://schemas.android.com/apk/res/android"
          >

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.CAPTURE_VIDEO_OUTPUT"/>
    <uses-permission android:name="android.permission.CAPTURE_SECURE_VIDEO_OUTPUT"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MaterialTheme"
        android:name="co.touchlab.lollipop.video.RecorderApplication">

        <activity
            android:name="co.touchlab.lollipop.video.record.RecordTest"
            android:label="Record Test">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="co.touchlab.lollipop.video.record.RecordService"
            android:enabled="true"
            android:exported="true">
        </service>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="90b5b9675372e1f2aff36d43ea5d6869040d37f3" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
